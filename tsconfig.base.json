{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2018",
        "lib": ["es2017", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@signy/auth": ["libs/common/src/auth/index.ts"],
            "@signy/branch": ["libs/common/src/branch/index.ts"],
            "@signy/common": ["libs/common/src/index.ts"],
            "@signy/company": ["libs/common/src/company/index.ts"],
            "@signy/contact": ["libs/common/src/contact/index.ts"],
            "@signy/creds": ["libs/common/src/creds/index.ts"],
            "@signy/db": ["libs/db/src/index.ts"],
            "@signy/decorators": ["libs/common/src/decorators/index.ts"],
            "@signy/document": ["libs/common/src/document/index.ts"],
            "@signy/document-input": ["libs/common/src/document-input/index.ts"],
            "@signy/drive": ["libs/drive/src/index.ts"],
            "@signy/e-sign": ["libs/e-sign/src/index.ts"],
            "@signy/email": ["libs/common/src/email/index.ts"],
            "@signy/exceptions": ["libs/exceptions/src/index.ts"],
            "@signy/iap": ["libs/iap/src/index.ts"],
            "@signy/json/contact/groups": ["libs/db/src/seeds/contact_groups.json"],
            "@signy/json/document/groups": ["libs/db/src/seeds/document_groups.json"],
            "@signy/notification": ["libs/common/src/notification/index.ts"],
            "@signy/otp": ["libs/common/src/otp/index.ts"],
            "@signy/pagination": ["libs/pagination/src/index.ts"],
            "@signy/profile": ["libs/common/src/profile/index.ts"],
            "@signy/redis": ["libs/redis/src/index.ts"],
            "@signy/roles": ["libs/common/src/roles/index.ts"],
            "@signy/s3": ["libs/s3/src/index.ts"],
            "@signy/sessions": ["libs/common/src/sessions/index.ts"],
            "@signy/signatory": ["libs/common/src/signatory/index.ts"],
            "@signy/signy": ["libs/common/src/signy/index.ts"],
            "@signy/signy-email": ["libs/common/src/signy-email/index.ts"],
            "@signy/signy-share-document": ["libs/common/src/signy-share-document/index.ts"],
            "@signy/slack": ["libs/slack/src/index.ts"],
            "@signy/sms": ["libs/sms/src/index.ts"],
            "@signy/subscription": ["libs/common/src/subscription/index.ts"],
            "@signy/upload": ["libs/common/src/upload/index.ts"],
            "@signy/user": ["libs/common/src/user/index.ts"],
            "@signy/verification": ["libs/common/src/verification/index.ts"]
        },
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "types": ["node", "jest"],
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitOverride": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "allowJs": true
    },
    "exclude": ["node_modules", "tmp"]
}
